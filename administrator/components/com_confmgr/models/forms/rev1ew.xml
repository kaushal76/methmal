<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_categories/models/fields">
		<field 
			name="id"
			type="text"
			label="COM_CONFMGR_REV1EW_FIELD_ID_LABEL"
			description="COM_CONFMGR_REV1EW_FIELD_ID_DESC"
			maxlength="10"
			filter="INTEGER"
			class="readonly"
			readonly="true"
		/>
		<field name="outcome" label="COM_CONFMGR_REV1EW_FIELD_OUTCOME_LABEL" description="COM_CONFMGR_REV1EW_FIELD_OUTCOME_DESC"
			type="radio"
			maxlength="11"
			class="input-xxlarge input-large-text"
			filter="INTEGER"
		/>
		<field name="comments_to_author" label="COM_CONFMGR_REV1EW_FIELD_COMMENTS_TO_AUTHOR_LABEL" description="COM_CONFMGR_REV1EW_FIELD_COMMENTS_TO_AUTHOR_DESC"
			type="textarea"
		/>
		<field name="comments_to_leader" label="COM_CONFMGR_REV1EW_FIELD_COMMENTS_TO_LEADER_LABEL" description="COM_CONFMGR_REV1EW_FIELD_COMMENTS_TO_LEADER_DESC"
			type="textarea"
		/>
		<field name="mode" label="COM_CONFMGR_REV1EW_FIELD_MODE_LABEL" description="COM_CONFMGR_REV1EW_FIELD_MODE_DESC"
			type="integer"
			maxlength="3"
			filter="INTEGER"
		/>
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			size="1"
			default="1"
			filter="interval"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="checked_out"
			type="hidden"
			label="COM_CONFMGR_REV1EW_FIELD_CHECKED_OUT_LABEL"
			description="COM_CONFMGR_REV1EW_FIELD_CHECKED_OUT_DESC"
			filter="UNSET"
		/>
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC"
			class="readonly"
		/>
		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			description="JGLOBAL_FIELD_CREATED_BY_DESC"
		/>
		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
		/>
		<field
			name="version"
			type="text"
			label="JGLOBAL_MODIFIED"
			description="JGLOBAL_MODIFIED"
			readonly="true"
			filter="unset"
			class="readonly"
		/>
		<field
			name="hits"
			type="text"
			label="JGLOBAL_HITS"
			description="JGLOBAL_LIST_HITS_LABEL"
			readonly="true"
			filter="unset"
			class="readonly"
		/>
	</fieldset>
	<fields name="params">
		<fieldset name="params">
		</fieldset>
	</fields>
	<fields name="images" label="COM_CONTENT_FIELD_IMAGE_OPTIONS">
		<fieldset name="images" label="JGLOBAL_FIELDSET_IMAGE_OPTIONS">
		</fieldset>
	</fields>
	<fields name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		</fieldset>
	</fields>
