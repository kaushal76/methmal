<?xml version="1.0" encoding="utf-8"?>
<form role = "form">
	<fieldset name = "Theme details">      
		<field name="id" type="hidden" default="0"/> 
			
		<field name="title" type="text" 
		
		label="COM_CONFMGT_FORM_LBL_THEME_TITLE" 
		description="COM_CONFMGT_FORM_DESC_THEME_TITLE" 
		class="input-block-level"
		required="true" 
		filter="string"
		
		/>
	
		<field name="description" type="textarea"
                
            label="COM_CONFMGT_FORM_LBL_THEME_DESCRIPTION"
            description="COM_CONFMGT_FORM_DESC_THEME_DESCRIPTION"        
            required="true" 
			class="input-block-level"		
			menu_published="0"
            cols="100"
            rows="8"
            filter="safehtml" 
			
		/>  
		
		<field name="userid" type="users"
                
            label="COM_CONFMGT_FORM_LBL_THEME_USERID"
			description="COM_CONFMGT_FORM_DESC_THEME_USERID"  
			class="input-block-level"
			input-type = "list"
			required = "true"
			 /> 
			
		/>  
		
         <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>

</form>
