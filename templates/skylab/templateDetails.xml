<?xml version="1.0" encoding="iso-8859-1"?>
<extension version="2.5" type="template" client="site">
    <name>Skylab</name>
    <creationDate>9.1.2012</creationDate>
    <author>LineLab.org</author>
    <authorEmail>info@linelab.org</authorEmail>
    <authorUrl>http://www.linelab.org</authorUrl>
    <copyright>Copyright 2011 - LineLab.org</copyright>
  	<license>GNU General Public License version 3</license>
  	<version>1.0.0</version>
	<description>TPL_SKYLAB_XML_DESCRIPTION</description>
		<files>
		<folder>css</folder>
		<folder>images</folder>
		<folder>html</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>index.php</filename>
		<filename>info.txt</filename>
		<filename>tools.php</filename>
		<filename>favicon.ico</filename>
		<filename>template_thumbnail.png</filename>
		<filename>template_preview.png</filename>
		<filename>templateDetails.xml</filename>		
	</files>
	<positions>
	  <position>slide</position>
	  <position>top</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
	  <position>position-3</position>
		<position>position-4</position>
    <position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
    <position>position-9</position>
    <position>position-10</position>
    <position>position-11</position>
    <position>position-12</position>
		<position>footerload</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_skylab.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_skylab.ini</language>
	</languages>
	<config>
		<fields name="params">
		<fieldset name="advanced">
		<field name="templateWidth" type="text" default="960" 
    label="TPL_SKYLAB_WIDTH" description="TPL_SKYLAB_WIDTH_DESC"> 
    </field> 
    <field name="leftWidth" type="text" default="270" 
    label="TPL_LEFT_SKYLAB_WIDTH" description="TPL_LEFT_SKYLAB_WIDTH_DESC">
    </field>
    <field name="rightWidth" type="text" default="270" 
    label="TPL_RIGHT_SKYLAB_WIDTH" description="TPL_RIGHT_SKYLAB_WIDTH_DESC">
        </field>
					<field name="sitetitle"  type="text" default="Skylab Free Joomla 2.5 Template by LineLab.org"
					label="TPL_SKYLAB_FIELD_SITETITLE_LABEL"
					description="TPL_SKYLAB_FIELD_SITETITLE_DESC"
					filter="string"></field>
					<field name="display_slideshow" type="list" default="0" label="TPL_SKYLAB_DISPLAY_SLIDESHOW" description="TPL_SKYLAB_DISPLAY_SLIDESHOW_DESC">
<option value="0">TPL_SKYLAB_NO</option>
<option value="1">TPL_SKYLAB_YES</option>
</field>
<field name="frontpage" type="list" default="1" label="TPL_SKYLAB_SHOW_FRONTAPGE" description="TPL_SKYLAB_SHOW_FRONTAPGE_DESC">
<option value="1">Enabled</option>
<option value="0">Disabled</option>
</field>
<field name="slideshow" type="media" default="templates/skylab/images/example.jpg" directoryimg="1" label="TPL_SKYLAB_SLIDESHOW" description="TPL_SKYLAB_SLIDESHOW_DESC" />
	</fieldset>
		</fields>
	</config>
</extension>